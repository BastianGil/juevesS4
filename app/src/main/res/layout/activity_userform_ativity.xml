<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userformAtivity">

    <EditText
        android:id="@+id/edt_userform_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:hint="@string/hint_userform_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_userform_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="@string/hint_userform_username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edt_userform_email"
        app:layout_constraintTop_toBottomOf="@+id/edt_userform_email" />

    <EditText
        android:id="@+id/edt_userform_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/hint_userform_email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/edt_userform_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_userform_name" />

    <Button
        android:id="@+id/btn_userform_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/btn_title_userform" />
</android.support.constraint.ConstraintLayout>